<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angelia.term4androidappproject.CalculateItineraryActivity">

    <TextView
        android:id="@+id/textSingleItineraryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Travel in this order"
        android:layout_margin="@dimen/page_border_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewSingleRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSingleItineraryTitle"
        android:layout_above="@id/buttonReturnToMain"
        android:layout_marginLeft="@dimen/page_border_margin"
        android:layout_marginRight="@dimen/page_border_margin"/>

    <Button
        android:id="@+id/buttonDeleteItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/page_border_margin"
        android:text="Delete"/>

</RelativeLayout>
